<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stan Świateł"
        android:id="@+id/lightsText"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:autoText="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stan Okien"
        android:id="@+id/windowText"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:autoText="false"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/lightsButton"
        android:layout_alignStart="@+id/lightsText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stan Drzwi"
        android:id="@+id/doorText"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:autoText="false"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/windowsButton"
        android:layout_alignStart="@+id/windowText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zmień"
        android:id="@+id/lightsButton"
        android:layout_alignTop="@+id/lightsText"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zmień"
        android:id="@+id/windowsButton"
        android:layout_alignTop="@+id/windowText"
        android:layout_alignStart="@+id/lightsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zmień"
        android:id="@+id/doorButton"
        android:layout_alignTop="@+id/doorText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura"
        android:id="@+id/temperatureText"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:autoText="false"
        android:layout_below="@+id/doorButton"
        android:layout_alignStart="@+id/doorText"
        android:layout_marginTop="48dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureBar"
        android:layout_below="@+id/temperatureText"
        android:layout_alignStart="@+id/temperatureText"
        android:layout_marginTop="53dp"
        android:layout_alignEnd="@+id/windowsButton"
        android:background="#ffffff"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="stan"
        android:id="@+id/lightCondition"
        android:layout_below="@+id/lightsText"
        android:layout_alignStart="@+id/lightsText"
        android:textSize="25dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="stan"
        android:id="@+id/windowCondition"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/windowText"
        android:layout_alignStart="@+id/windowText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="stan"
        android:id="@+id/doorCondition"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/doorText"
        android:layout_alignStart="@+id/doorText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="stan"
        android:id="@+id/temperatureCondition"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/temperatureText"
        android:layout_alignStart="@+id/temperatureText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powórt"
        android:id="@+id/returnButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
